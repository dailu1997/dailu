/* pages/index/dengji/dengji.wxss */
page {
  background-color: #f4f4f4;
}
.body {
  width: 710rpx;
  margin: 20rpx;
  padding-top:50rpx;
  background-color: #fff;
  border-radius: 10rpx; 
  overflow: hidden;
}
.yi {
  width: 500rpx;
  margin: 0 auto; 
  font-size: 32rpx;
  font-weight: 700;
  text-align: center;
}
.come {
  text-align: center;
  width: 500rpx;
  font-size: 24rpx;
  margin: 35rpx auto;
  color: #b0b0b0;
}
.body input {
   height: 73rpx;
   margin: 0 auto;
   font-size: 24rpx;
   padding-left: 40rpx;
   width: 530rpx;
   border: 1px solid #df9282;
   color: #df9282;
   border-radius: 10rpx;
   box-sizing: border-box;
   margin-bottom: 20rpx;
}
.body button {
  height: 73rpx;
  width: 530rpx;
  background-color: #df9282;
  color: #fff;
  margin-top: 60rpx;
  margin-bottom: 60rpx;

  font-size: 24rpx;
}
.tap {
  display: inline-block;
  padding: 10rpx 12rpx;
  box-sizing: border-box;
  border-radius: 50rpx;
  background-color: #df9282;
  font-size: 18rpx;
}

.he {
  width: 500rpx;
  margin: 50rpx auto;
  display: flex;
  justify-content: center;
  color: #fff;
}
.jin {
  background-color: #f4f4f4;
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
}
.number {
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
}
.function {
  width: 530rpx;
  margin: 0 auto;
  margin-top: 40rpx;
  display: flex;
  justify-content:space-between;
}
.qian {
  display: inline-block;
  padding: 20rpx 25rpx;
  box-sizing: border-box;
  background-color: #d6bbb5;
  color: #fff;
}