/* pages/index/register/register.wxss */
page {
  background-color: rgb(244, 244, 244)
}
.body {
  box-sizing: border-box;
  padding: 19rpx;
  background-color: rgb(255, 255, 255);
  margin: 19rpx;
  border-radius: 2%;
}
.width {
    width: 650rpx;
}
.full-name {
   font-size: 30rpx;
    width: 650rpx;
    border: 1px solid #ccc;
    height: 60rpx;
    line-height: 60rpx;
    margin: 20rpx auto;
    color: rgb(161, 161, 161);
}
.full-name label {
  margin-left: 40rpx;
}
.name {
    font-size: 30rpx;
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    padding-left: 40rpx;
    box-sizing: border-box;
}

radio{
    width: 38rpx;
}
 
radio .wx-radio-input{
    border-radius: 10%; 
    width: 28rpx;
    height: 28rpx;
}
 
 .radio-group {
   float: right;
 }
/* 选中后的样式 （可根据设计稿需求自己修改） */
radio .wx-radio-input.wx-radio-input-checked::before{
    border-radius: 10%;
    width: 44rpx; 
    height: 44rpx; 
    line-height: 44rpx;
    text-align: center;
    font-size: 26rpx; /* 对勾大小 26rpx */
    color:#fff; /* 对勾颜色 */
    background:  rgb(223,146,130);
    border-color: rgb(223,146,130);
}
.apartment {
  box-sizing: border-box;
  padding-left: 40rpx;
  height: 240rpx;
  border: 1px solid #ccc;
  margin: auto;
  color: rgb(153, 153, 153);
  font-size: 30rpx;
}
.apartment text {
  background-color: rgb(223, 146, 130);
  color: #fff;
  font-size: 12px;
  line-height: 56rpx;
  display:inline-block;
  text-align: center;
  width: 172rpx;
  height: 56rpx;
  margin: 30rpx 30rpx 0 0 ;
}
.budget view:nth-child(1) {
  margin-top: 30rpx;
  font-size: 30rpx;
  margin-left: 40rpx;
}
.size view:nth-child(1) {
  margin-top: 30rpx;
  font-size: 30rpx;
  margin-left: 40rpx;
}
.demand {
  height: 200rpx;
  margin: 0 auto;
  padding: 24rpx;
  border: 1px solid #ccc;
  box-sizing: border-box;
}
.button {
  background-color: #df9282;
  color: #fff;
}